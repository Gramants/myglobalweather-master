
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
>


        <LinearLayout xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/weather_container_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/current_weather_container"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:weightSum="5"
                >

                <TextView
                    android:id="@+id/location_name"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_descr"
                    android:textSize="@dimen/location_text"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="4"
                    />

                <TextView
                    android:id="@+id/current_temperature"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:textSize="@dimen/current_temperature_text"
                    android:textColor="@color/text_descr"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                     />

            </LinearLayout>


            <TextView
                android:id="@+id/weatherdesc"
                android:textSize="@dimen/location_desc"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:textColor="@color/text_descr"
                android:layout_width="wrap_content" />

            <ListView
                android:id="@+id/weather_forecast_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

        </LinearLayout>



    </LinearLayout>

